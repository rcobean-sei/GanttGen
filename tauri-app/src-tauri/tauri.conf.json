{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GanttGen",
  "version": "1.0.0",
  "identifier": "com.sei.ganttgen",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "npx http-server src -p 1420 -c-1 --cors",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GanttGen - Gantt Chart Generator",
        "width": 900,
        "height": 750,
        "minWidth": 900,
        "maxWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "backgroundColor": "#FFFFF8"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": {
      "../../scripts": "scripts",
      "../../templates": "templates"
    },
    "shortDescription": "Build Gantt charts for SEI documents",
    "longDescription": "GanttGen is a professional Gantt chart generator that creates presentation-ready timeline visualizations from JSON or Excel input files. Features the SEI brand color palette."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
