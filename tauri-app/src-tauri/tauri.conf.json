{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GanttGen",
  "version": "1.0.0",
  "identifier": "com.sei.ganttgen",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GanttGen - Gantt Chart Generator",
        "width": 1100,
        "height": 750,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": {
      "../../scripts": "scripts",
      "../../scripts/node_modules": "scripts/node_modules",
      "../../templates": "templates"
    },
    "shortDescription": "Build Gantt charts for SEI documents",
    "longDescription": "GanttGen is a professional Gantt chart generator that creates presentation-ready timeline visualizations from JSON or Excel input files. Features the SEI brand color palette."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
