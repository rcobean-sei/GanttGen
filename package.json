{
  "name": "ganttgen",
  "version": "1.0.0",
  "description": "Data-driven Gantt chart generator",
  "scripts": {
    "build": "node scripts/build.js --input config/project.json",
    "render": "node scripts/render.js",
    "template": "node scripts/generate_template.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --config playwright.visual.config.js",
    "test:all": "npm run test && npm run test:e2e",
    "update-snapshots:ci": "bash scripts/update-visual-snapshots.sh",
    "install:mac": "bash scripts/install-mac.sh",
    "tauri": "npm --prefix tauri-app run tauri",
    "tauri:dev": "npm --prefix tauri-app run tauri:dev",
    "tauri:build": "node scripts/tauri-build.js",
    "tauri:icon": "npm --prefix tauri-app run tauri:icon",
    "icons:generate": "node scripts/generate-icons.js"
  },
  "keywords": [
    "gantt",
    "chart",
    "timeline"
  ],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "exceljs": "^4.4.0",
    "@playwright/test": "^1.49.0"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  },
  "optionalDependencies": {
    "sharp": "^0.34.5"
  }
}
