{
  "name": "ganttgen",
  "version": "1.0.0",
  "description": "Data-driven Gantt chart generator",
  "scripts": {
    "build": "node scripts/build.js --input config/project.json",
    "render": "node scripts/render.js",
    "template": "node scripts/generate_template.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --config playwright.visual.config.js",
    "test:all": "npm run test && npm run test:e2e"
  },
  "keywords": [
    "gantt",
    "chart",
    "timeline"
  ],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "exceljs": "^4.4.0",
    "@playwright/test": "^1.40.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "optionalDependencies": {
    "sharp": "^0.34.5"
  }
}
